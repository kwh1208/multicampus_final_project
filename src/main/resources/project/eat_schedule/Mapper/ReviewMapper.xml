<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.eat_schedule.Mapper.ReviewMapper">

    <select id="findAllReviewByStore" resultType="project.eat_schedule.dto.Review">
        select * from review
        where seq=#{store_seq}
    </select>
    <select id="findAvgScore" resultType="java.lang.Double">
        select avg(score) from review where seq=#{store_seq}
    </select>
</mapper>